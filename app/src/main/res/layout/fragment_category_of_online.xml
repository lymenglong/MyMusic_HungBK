<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.mymusic_hungbk.fragment_child.CategoryOfOnlineFragment">

    <include
        android:id="@+id/searchCategoryOnline"
        layout="@layout/search_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:id="@+id/lvNetWorkCategory"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/imgBCheckNetworkCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_blank_networkproblem"
            android:background="@null"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mất kết nối ,vui lòng thử lại"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <GridView
        android:id="@+id/gvCategoryOnline"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="-38dp"
        android:numColumns="2"/>




</LinearLayout>
